{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "ElectrodeSize": {
            "title": "Electrode size [mm]",
            "description": "size of electrode + asymmetry factor",
            "type": "number"
        },
        "ElectrodeDistance": {
            "title": "Electrode distance [mm]",
            "description": "Distance between electrodes",
            "type": "number"
        },
        "ElectrodeShape": {
            "title": "Electrode shape",
            "description": "Defining the electrode shape",
            "type": "string",
            "default": "asymmetric, symmetric, round/square"
        },
        "MagnetronTargetArea": {
            "title": "Electrode/target area [mm^2]",
            "description": "Target area",
            "type": "number"
        },
        "MagnetronMagenticField": {
            "title": "Magnetic field configuration",
            "description": "Configuration of magnetic field",
            "type": "string"
        },
        "MagnetronDrivingElectrode": {
            "title": "identical with electrode",
            "description": "Target electrode equal to driving electrode",
            "type": "bool"
        },
        "MagnetronTargetMaterial": {
            "title": "target material",
            "description": "Material description",
            "type": "string",
            "default": "e.g. 99,99at% Al, Ti\\u2026// inserts"
        }
    },
    "required": [
        "ElectrodeSize",
        "ElectrodeDistance",
        "ElectrodeShape",
        "MagnetronTargetArea",
        "MagnetronMagenticField",
        "MagnetronDrivingElectrode",
        "MagnetronTargetMaterial"
    ]
}