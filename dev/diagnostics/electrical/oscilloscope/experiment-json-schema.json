{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "id": "some schema id",
    "title": "some schema title",
    "description": "some schema description",
    "type": "object",
    "properties": {
        "name": {
            "title": "Oscilloscope",
            "description": "Brand and type/name of the device",
            "type": "string"
        },
        "triggerChannel": {
            "title": "Trigger channel",
            "description": "Channel used for triggering",
            "type": "string"
        },
        "triggerMode": {
            "title": "Trigger mode",
            "description": "Mode used for triggering (e.g. edge, window)",
            "type": "string"
        },
        "triggerLevel": {
            "title": "Trigger level [V]",
            "description": "Voltage level used for triggering",
            "type": "number"
        },
        "triggerOptions": {
            "title": "Trigger options",
            "description": "Options of the trigger mode",
            "type": "string"
        },
        "samplingMode": {
            "title": "Sampling mode",
            "description": "Mode for data sampling (sample, peakdk, high res, RMS)",
            "type": "string"
        },
        "sampleRate": {
            "title": "Sample rate [GS/s]",
            "description": "Sample rate",
            "type": "number"
        },
        "recordLength": {
            "title": "Record length",
            "description": "Number of data points",
            "type": "number"
        },
        "timeWindow": {
            "title": "Time window [s]",
            "description": "Time window",
            "type": "number"
        }
    },
    "required": [
        "name",
        "triggerChannel",
        "triggerMode",
        "samplingMode",
        "sampleRate",
        "timeWindow"
    ]
}